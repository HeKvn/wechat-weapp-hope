input{
  padding: 10rpx;
  width: 80%;
  margin: 15rpx 40rpx;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
  justify-content: center;
  align-content: center;
}

.search_btn{
  width: 120rpx;
  border: 1rpx solid var(--themeColor);
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 33rpx;
  margin: 12rpx 50rpx;
  align-content: center;
  color: white;
  background-color: var(--themeColor);
  text-align: center;
}

.search_btn:active{
  width: 120rpx;
  border: 1rpx solid #B2DFEE;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 33rpx;
  margin: 12rpx 50rpx;
  align-content: center;
  color: white;
  background-color: #B2DFEE;
  text-align: center;
}

